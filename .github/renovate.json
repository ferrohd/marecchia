{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":enablePreCommit",
    ":semanticCommits"
  ],
  "assignees": [
    "ferrohd"
  ],
  "dependencyDashboard": true,
  "automerge": true,
  "patch": {
    "enabled": false
  },
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "groupName": "cargo all non-major dependencies",
      "groupSlug": "cargo-all-minor-patch",
      "matchDatasources": [
        "crate"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "semanticCommitType": "vuln",
    "minimumReleaseAge": "1 day",
    "internalChecksFilter": "strict",
    "addLabels": [
      "security"
    ]
  },
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
