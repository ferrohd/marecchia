{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "strict": true,
        "declaration": true,
        "outDir": "dist",
        // disable sourceMap for production
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "moduleResolution": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@p2p": ["../crates/marecchia-p2p/pkg/marecchia_p2p"],
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ],
    "include": [
        "src/**/*.ts",
    ],
}
